<!doctype html>
<html lang="en">
<% include layout/head %>

<body>
<div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="index.html">SB Admin</a>
        </div>
        <!-- Top Menu Items -->

        <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
        <% include layout/nav.ejs%>
        <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
        <% include layout/sidenav.ejs %>
        <!-- /.navbar-collapse -->
    </nav>

    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        User
                    </h1>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12" style="float:left">
                    <!--<form role="form">-->
                        <div class="form-group" style="width:20%; float:left;">
                            <p>
                                <a href="<%- user.image %>">
                                    <img src="<%- user.image %>" width="250" height="300" alt="lorem">
                                </a>
                            </p>
                        </div>

                    <div class="form-group" style="width:80%; float:left;" >
                        <div class="form-group">
                            <label> Role :</label>
                            <%  var userRole = "";
                            if(user.role == 0 ) {
                                userRole = "Basic";
                            } else {
                                if(user.role == 1) {
                                    userRole = "Standard";
                                } else {
                                    userRole = "Premium";
                                }
                            }%>
                            <span> <%-  userRole  %> </span>
                            <!--<input class="form-control" placeholder="Enter text" value="<%-  userRole  %>" readonly>-->
                        </div>

                        <div class="form-group">
                            <label>Checker Tries Count:</label>
                            <span><%- user.checkerTries %></span>
                        </div>

                        <div class="form-group">
                            <label>Seo Tries  Count:</label>
                            <span><%- user.seoTries %></span>
                        </div>


                        <div class="form-group">
                            <label>Email:</label>
                            <span><%- user.email %></span>
                        </div>



                        <div class="form-group">
                            <label>Gender:</label>
                            <%
                                var gender_ = "";

                                    if(user.gender == 0) {
                                        gender_ = "male";
                                    } else if (user.gender == 1) {
                                        gender_ = "female";
                                    } else {
                                        gender_ = "other";
                                    }
                            %>
                            <span><%- gender_ %></span>
                        </div>

                        <div class="form-group">

                            <%  var user_phone;
                                    if(user.phone) {
                                        user_phone = user.phone;
                                    } else
                                        user_phone = " - - -";
                            %>
                            <label>Phone:</label>
                            <span><%- user_phone %></span>
                        </div>


                        <div class="form-group">
                            <label>Registrated Date:</label>
                            <span><%- user.registratedDate %></span>
                        </div>

                        <div class="form-group">
                            <label>All Checks:</label>
                             <span><a href = "<%= user.id %>/sites"> All Checks </a></span>
                        </div>
                    </div>
                </div>
                    <div class="col-lg-12" style="float:left">

                        <div class="form-group">
                            <label>Send Message</label>
                            <input type="textarea" name = "message" class="form-control" placeholder="Enter text">
                            <input type ="submit" onclick="sendMessage()" value="Send">
                        </div>

                        <div class="form-group">
                            <label>First Name</label>
                            <input class="form-control" placeholder="Enter text" value="<%- user.first_name %>" readonly>
                        </div>

                        <div class="form-group">
                            <label>Last Name</label>
                            <input class="form-control" placeholder="Enter text" value="<%- user.last_name %>" readonly>
                        </div>


                        <div class="form-group">
                            <label>Username</label>
                            <input class="form-control" placeholder="Enter text" value="<%- user.username %>" readonly>
                        </div>

                        <div class="form-group">
                            <label>Company</label>
                            <input class="form-control" placeholder="Enter text" value="<%- user.company %>" readonly>
                        </div>

                        <div class="form-group">
                            <label>Profession</label>
                            <input class="form-control" placeholder="Enter text" value="<%- user.profession %>" readonly>
                        </div>


                        <div class="form-group">
                            <label>Country</label>
                            <input class="form-control" placeholder="Enter text" value="<%- user.country %>" readonly>
                        </div>

                        <div class="form-group">
                            <label>Birth Date</label>
                            <input class="form-control" placeholder="Enter text" value="<%- user.birthDate %>" readonly>
                        </div>
                    <!--</form>-->
                </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</div>
<% include layout/footer.ejs %>
    </div> </div>